  "license": "MIT",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc-watch -p ./tsconfig.build.json --onSuccess 'node ./dist/main.js'",
    "dev:local": "tsc-watch -p ./tsconfig.build.json --onSuccess 'node ./dist/main-local.js'",
    "format": "prettier --write **/*.ts",
    "lint": "eslint --ext ts,tsx src test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "scripts": "sh ./scripts.sh",
    "start": "node ./dist/main.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@todo/db-marshall": "^0.1.0",
    "@todo/lib-db": "0.1.0",
    "apollo-server-express": "^2.13.0",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0"
  },
  "devDependencies": {
    "@types/convict": "^5.2.0",
    "@types/dotenv": "^8.2.0",
    "apollo-server-testing": "^2.13.0",
    "node-fetch": "^2.6.0",
    "tsc-watch": "^4.2.3"
  }
}
