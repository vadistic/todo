{
  "name": "@todo/db-prisma",
  "version": "0.1.0",
  "description": "Testing stacks with todo apps",
  "repository": "https://github.com/vadistic/todo",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint src.{ts,tsx} --fix",
    "build": "tsc -p tsconfig.build.json",
    "start": "echo TODO",
    "test": "jest",
    "generate": "prisma2 generate",
    "postinstall": "npm -s run generate",
    "db:clean": "rm -rf temp",
    "db:init": "yarn db:migrate:save && yarn db:migrate:up",
    "db:seed": "ts-node -T ./src/scripts/seed.ts",
    "db:cptest": "cp ./temp/dev.db ./temp/test.db",
    "db:migrate:save": "prisma2 migrate save --experimental --name init",
    "db:migrate:up": "prisma2 migrate up --experimental -c",
    "db:setup": "yarn db:clean && yarn db:init && yarn db:seed && yarn db:cptest"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-preview024",
    "@todo/shared-db": "0.1.0"
  },
  "devDependencies": {
    "@vadistic/eslint-config-node": "^0.1.8",
    "@vadistic/prettier-config": "^0.1.8",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "prettier": "^1.19.1",
    "prisma2": "^2.0.0-preview024",
    "typescript": "^3.8.3"
  }
}
