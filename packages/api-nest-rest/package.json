{
  "name": "@todo/api-nest-rest",
  "version": "0.1.0",
  "description": "Testing stacks with todo apps",
  "repository": "https://github.com/vadistic/todo",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "scripts": "sh ./scripts.sh",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "build": "nest build -p tsconfig.build.json",
    "start": "nest start -p tsconfig.build.json",
    "start:dev": "nest start -p tsconfig.build.json --watch",
    "start:debug": "nest start -p tsconfig.build.json --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'TODO'"
  },
  "dependencies": {
    "@nestjs/common": "7.0.5",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "7.0.5",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "7.0.5",
    "convict": "^5.2.0",
    "mongoose": "5.9.6",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "7.0.2",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.5",
    "@types/convict": "^4.2.1",
    "@types/express": "4.17.3",
    "@types/mongoose": "^5.7.7",
    "@vadistic/eslint-config-node": "^0.1.8",
    "@vadistic/prettier-config": "^0.1.8",
    "eslint": "^6.8.0",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  }
}
