{
  "name": "@todo/api-nest-rest",
  "version": "0.1.0",
  "private": true,
  "description": "Testing stacks with todo apps",
  "repository": "https://github.com/vadistic/todo",
  "license": "MIT",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "scripts": {
    "build": "nest build -p tsconfig.build.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write src",
    "lint": "eslint --ext ts,tsx src",
    "scripts": "sh ./scripts.sh",
    "start": "nest start -p tsconfig.build.json",
    "start:debug": "nest start -p tsconfig.build.json --debug --watch",
    "start:dev": "nest start -p tsconfig.build.json --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'TODO'",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.8",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.8",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^7.0.8",
    "convict": "^5.2.0",
    "mongoose": "^5.9.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.8",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.12"
  }
}
